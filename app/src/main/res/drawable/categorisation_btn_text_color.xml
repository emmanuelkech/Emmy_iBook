<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused and not pressed -->
    <item android:color="#04B072" android:state_focused="true" android:state_pressed="false" />

    <!-- Focused and pressed -->
    <item android:color="#FFFFFF" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed -->
    <item android:color="#FFFFFF" android:state_focused="false" android:state_pressed="true" />

    <!-- Default color -->
    <item android:color="#04B072" />
</selector>